<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#673AB7">

    <TextView
        android:id="@+id/prodPriceTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="1"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="@+id/prodImage"
        app:layout_constraintTop_toBottomOf="@+id/prodNameTxt" />

    <TextView
        android:id="@+id/prodNameTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="8dp"
        android:layout_weight="2"
        android:backgroundTint="#FFFFFF"
        android:text="TextView"
        android:textColor="@color/primary"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="@+id/prodImage"
        app:layout_constraintRight_toRightOf="@id/prodPriceTxt"
        app:layout_constraintTop_toBottomOf="@+id/prodImage" />

    <ImageView
        android:id="@+id/prodImage"
        android:layout_width="0dp"
        android:layout_height="157dp"

        android:background="@android:drawable/ic_menu_crop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/discriptionTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:maxLines="3"
        android:paddingStart="18dp"
        android:paddingEnd="18dp"
        android:text="Doing business online seems to be risk taking for most of us"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintRight_toRightOf="@id/prodPriceTxt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/prodNameTxt" />

    <Button
        android:id="@+id/add2cart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="add to cart"
        app:layout_constraintEnd_toEndOf="@+id/prodImage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/prodImage"
        app:layout_constraintTop_toBottomOf="@+id/discriptionTxt"
        app:layout_constraintRight_toRightOf="@id/prodPriceTxt"

        app:rippleColor="#DF1515" />

</androidx.constraintlayout.widget.ConstraintLayout>